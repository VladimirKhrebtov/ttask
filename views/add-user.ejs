<%- include("includes/head.ejs"); %>
<%- include("includes/header.ejs"); %>
<main>
    <div class="fluid-container">
        <form action="/add-user" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">User name</label>
                <input name="username" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="First Name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Second name</label>
                <input name="secondname" type="text" class="form-control" id="exampleInputPassword1" placeholder="Second Name" maxlength="30">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">User position</label>
                <input name="userposition" type="text" class="form-control" id="exampleInputPassword1" placeholder="User Position">
            </div>
            <button type="submit" class="btn btn-primary">Add New User</button>
        </form>
    </div>
</main>
